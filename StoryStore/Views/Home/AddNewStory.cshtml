
@{
    ViewData["Title"] = "AddNewStory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <form class="addNewStoryForm">
        <div class="form-group">
            <label for="exampleInputEmail1">Story Name</label>
            <input type="text" class="form-control" id="addNewStory-storyName" aria-describedby="emailHelp" placeholder="Enter story name">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Author Name</label>
            <input type="text" class="form-control" id="addNewStory-AuthorName" placeholder="Enter Author Name">
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Description</label>
            <input type="text" class="form-control" id="addNewStory-Description" placeholder="Enter Author Name">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Header image</label>
            <input accept="image/*" type="file" class="form-control" id="addNewStory-storyImage" placeholder="">
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Audio File</label>
            <input accept="audio/*" type="file" class="form-control" id="addNewStory-audioFile" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Pdf File</label>
            <input accept="application/pdf"  type="file" class="form-control" id="addNewStory-pdfFile" placeholder="Password">
        </div>

        <div class="form-group">
            <label for="exampleInputPassword1">Age</label>
            <select class="form-control" id="addNewStory-selectAgeRange">
                <option>3-6</option>
                <option>7-10</option>
                <option>10-14</option>
                <option>14-17</option>
                <option>18+</option>
            </select>
        </div>

        <button type="submit" id="addNewStory" style="background-color:#2A3F54;color:white;float:right;margin-top:2rem;margin-right:2rem
" class="btn">
            Add New Story
        </button>
    </form>

</div>
